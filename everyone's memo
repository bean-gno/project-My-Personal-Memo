    <link href="https://fonts.googleapis.com/css?family=Stylish&display=swap" rel="stylesheet">

    <title>SW사관학교 정글|binjinoh's memojang2</title>

    <style type="text/css">
        * {
            font-family: "Stylish", sans-serif;
        }

        .wrap {
            width: 1500px;
            margin: auto;
        }

        .wrap-post-box{
            width: 400px;
            margin-top: 30px;
        }
        .form-post {
            width: 500px;
        }

        #post-box {
        }

    </style>
    <script>
        let update = false;
        $(document).ready(function () {
            $('#cards-box').html("")
            showArticles(update, -1);
        });

        function showArticles(update, num) {
            $('#cards-box').empty()
            $.ajax({
                type: "GET",
                url: "/api/read",
                data: {},
                success: function (response) {
                    let memo_all = response["articles"];
                    if (update == false) {                                    //없어도 작동하는 if구절
                        for (let i = 0; i < memo_all.length; i++) {
                            let memo = memo_all[i];
                            let title = memo['title'];
                            let content = memo['content'];
                            makeCard(title, content, i);
                        }
                    } else if (update == true) {
                        for (let i = 0; i < memo_all.length; i++) {
                            let memo = memo_all[i];
                            let title = memo['title'];
                            let content = memo['content'];
                            if (i == num) {
                                makeForm(title, content, i);
                            } else {
                                makeCard(title, content, i);
                            }
                        }
                    }
                }
            })
        }

        function makeCard(title, content, num) {
            let temp_html = `<div class="card" id="card number${num}">
                                <div class="card-body">
                                <h3 id="memo_title" class="card-title">${title}</h3>
                                <h4 id="memo_content" class="card-text">${content}</h4>
                                <button type="button" class="btn btn-secondary btn-sm" onclick="updateArticle(${num})">수정</button>
                                <button type="button" class="btn btn-dark btn-sm" onclick="deleteArticle('${title}')">삭제</button>
                                </div>
                             </div>`;

            $("#cards-box").append(temp_html);
        }

        function makeForm(memo_title, content, num) {
            let temp_html = `<div class="card" id="card number${num}">
                                <div class="card-body">
                                    <form>
                                        <div class="form-group">
                                            <textarea type="text" class="form-control" id="memo_title_change" rows="1">${memo_title}</textarea>
                                        </div>
                                        <div class="form-group">
                                            <textarea type="text" class="form-control" id="memo_content_change" rows="3">${content}</textarea>
                                        </div>
                                        <button type="button" class="btn btn-primary btn-sm" onclick="save_updatedArticle('${memo_title}')">저장</button>
                                    </form>
                                </div>
                            </div>`;
            $('#cards-box').append(temp_html);
        }

        function postArticle(memo_title) {
            let changed_memo_title = $('#post-title').val();
            let changed_memo_content = $('#post-content').val();
            $.ajax({
                type: "POST",
                url: "/api/post",
                data: {
                    original_title_give: memo_title,
                    memo_title_give: changed_memo_title,
                    memo_content_give: changed_memo_content
                },
                success: function (response) {
                    if (response["result"] == "success") {
                        alert("포스팅 성공!");
                        window.location.reload();
                    } else {
                        alert("서버 오류!");
                    }
                }
            })
        }

        function updateArticle(num) {
            update = true;
            showArticles(update, num);
        }

        function save_updatedArticle(memo_title) {
            let changed_title = $('#memo_title_change').val();
            let changed_content = $('#memo_content_change').val();
            $.ajax({
                type: "POST",
                url: "/api/update",
                data: {
                    'title_original_give': memo_title,
                    'memo_title_give': changed_title,
                    'memo_content_give': changed_content
                },
                success: function (response) {
                    if (response["result"] == "success") {
                        alert(response['msg']);
                    }
                }
            })
            update = false;
            window.location.reload();
        }

        function deleteArticle(title) {
            $.ajax({
                type: "POST",
                url: "/api/delete",
                data: {'memo_title': title},
                success: function (response) {
                    if (response["result"] == "success") {
                        alert(response['msg']);
                    }
                }
            })
            window.location.reload();
        }

    </script>
</head>

